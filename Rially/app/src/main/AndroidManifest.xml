<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gerwin.rially">



    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gerwin.rially.MainActivity" />
        </activity>
        <activity
            android:name=".show_opdrachten"
            android:label="@string/title_activity_show_opdrachten"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Rules"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddOpdracht"
            android:label="@string/title_activity_add_opdracht"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddUser"
            android:label="@string/title_activity_add_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageUpload"
            android:label="@string/title_activity_image_upload"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BugsAndIssues"
            android:label="@string/title_activity_bugs_and_issues"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>